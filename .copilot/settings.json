{
    "version": "1",
    "instructions": {
        "path": ".github/copilot-instructions.md"
    },
    "project": {
        "name": "learn-generative-ai",
        "language": "python",
        "pythonVersion": "3.12.5",
        "venvFolder": ".venv",
        "os": "windows",
        "shell": "pwsh",
        "domain": "generative-ai-education",
        "learningPath": "docs/learning-path-60-days.md"
    },
    "workspace": {
        "include": [
            "src/**",
            "notebooks/**",
            "docs/**",
            ".github/prompts/**"
        ],
        "exclude": [
            ".venv/**",
            ".git/**",
            "**/.ipynb_checkpoints/**",
            "**/__pycache__/**",
            "data/**",
            "*.pkl",
            "*.bin"
        ]
    },
    "notebooks": {
        "defaultKernel": ".venv",
        "rules": {
            "cellMetadataLanguageRequired": true,
            "preserveCellIds": true,
            "educationalExplanations": true
        }
    },
    "development": {
        "codeStyle": "educational",
        "documentation": "verbose",
        "errorHandling": "explanatory",
        "testing": "example-driven"
    },
    "ai": {
        "concepts": [
            "tokenization",
            "embeddings",
            "transformers",
            "attention-mechanisms",
            "generative-models",
            "ai-agents",
            "prompt-engineering"
        ],
        "frameworks": [
            "openai",
            "tiktoken",
            "faiss",
            "numpy",
            "pandas"
        ]
    },
    "prompts": {
        "templatePath": ".github/prompts",
        "categories": [
            "code-explanation",
            "learning-path",
            "project-development",
            "research-exploration",
            "troubleshooting-debug"
        ]
    }
}